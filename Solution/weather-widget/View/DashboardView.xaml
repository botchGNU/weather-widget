<UserControl x:Class="weather_widget.View.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:weather_widget.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="310">

    <!--View für Dashboard (Anzeige des wetters)-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!--Anzeige derzeitige Temperatur-->
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="{Binding CurrentWeatherDegrees}" 
                   FontSize="48" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="#FFA0A0A0"/>

        
        <!--ListBox für Vorschau der nächsten Woche-->
        <ListBox Grid.Row="1"
                 Grid.Column="1"
                 Background="Transparent"
                 Margin="10"
                 DataContext="{Binding ForecastList}"/>

    </Grid>
</UserControl>
